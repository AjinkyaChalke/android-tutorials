<!-- This layout is used by MainActivity when the device is in landscape mode.
     It references both fragments that are arranged side by side. The first
     fragment (FruitListFragment) uses up 1/3 of the horizontal space and the
     second fragment (DetailFragment) uses up the remaining 2/3. The View
     is used as a visual divider between the two fragments. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <fragment
        android:id="@+id/fragment_fruit_list"
        android:name="org.xmlvm.tutorial.android.activity.fragment.FruitListFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <View
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />

    <fragment
        android:id="@+id/fragment_detail"
        android:name="org.xmlvm.tutorial.android.activity.fragment.DetailFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2" />

</LinearLayout>